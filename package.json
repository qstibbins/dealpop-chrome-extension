{
  "name": "deal-pop-chrome-extension",
  "version": "1.0.0",
  "description": "DealPop Chrome Extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && vite build",
    "build:prod": "npm run clean && NODE_ENV=production vite build",
    "build:watch": "vite build --watch",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "test": "jest",
    "test:extraction": "node test-extension.js",
    "test:sites": "node test-different-sites.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "firebase": "^12.2.1",
    "html2canvas": "^1.4.1",
    "openai": "^5.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.1.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.8"
  }
}
