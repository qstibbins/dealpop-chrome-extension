{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./",
    "rootDir": "./src",
    "declaration": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/background/**/*",
    "src/content/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 