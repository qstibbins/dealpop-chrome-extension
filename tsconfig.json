{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./",
    "rootDir": "./background",
    "declaration": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "background/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 